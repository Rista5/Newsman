<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SettingsActivity">

    <EditText
        android:id="@+id/settings_ip_adr_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/settings_distance_from_top"
        android:ems="10"
        android:hint="@string/settings_ip_adr_hint"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/settings_set_ip_adr_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/settings_distance_vertical"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/settings_ip_adr_et"
        app:layout_constraintStart_toStartOf="@+id/settings_ip_adr_et"
        app:layout_constraintTop_toBottomOf="@+id/settings_ip_adr_et" />
</androidx.constraintlayout.widget.ConstraintLayout>