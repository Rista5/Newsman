<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle" parent="AppTheme">
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="InfoStyle" parent="AppTheme">
        <item name="android:paddingLeft">24dp</item>
    </style>

    <style name="TitleStyle" parent="AppTheme">
        <item name="android:textSize">24dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowDx">10.0</item>
        <item name="android:shadowDy">10.0</item>
        <item name="android:shadowRadius">5.0</item>
        <item name="android:fontFamily">@font/new_rocker</item>
    </style>

    <style name="PictureName">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/new_rocker</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="CommentStyle" parent="AppTheme">
        <item name="android:background">@drawable/comment_border</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="BoldText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="iconSize">
        <item name="android:width">30dp</item>
        <item name="android:height">30dp</item>
    </style>


</resources>
